@page "/testeaza-formular"
@using System.ComponentModel.DataAnnotations

<h3>Test Form Subcontractor</h3>

<EditForm Model="@model" OnSubmit="OnSubmit" FormName="VerifForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText class="form-control mb-2" @bind-Value="model.Nume" placeholder="Nume" />
    <InputText class="form-control mb-2" @bind-Value="model.Domeniu" placeholder="Domeniu" />
    <InputText class="form-control mb-2" @bind-Value="model.Email" placeholder="Email" />
    <InputText class="form-control mb-2" @bind-Value="model.Telefon" placeholder="Telefon" />

    <button class="btn btn-success" type="submit">Trimite</button>
</EditForm>

@code {
    private SubcontractorTestModel model = new();

    private void OnSubmit()
    {
        Console.WriteLine($"TEST: {model.Nume} / {model.Domeniu} / {model.Email} / {model.Telefon}");
    }

    public class SubcontractorTestModel
    {
        [Required]
        public string Nume { get; set; } = string.Empty;
        [Required]
        public string Domeniu { get; set; } = string.Empty;
        public string? Email { get; set; }
        public string? Telefon { get; set; }
    }
}
